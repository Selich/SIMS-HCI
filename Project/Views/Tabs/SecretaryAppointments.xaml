<UserControl x:Class="Project.Views.Tabs.SecretaryAppointments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            xmlns:tz="http://schemas.abtsoftware.co.uk/transitionz" 
            xmlns:appointmentTabs="clr-namespace:Project.Views.Tabs.AppointmentTabs"
             >
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="1266" Margin="0,-20,0,0" Fill="{StaticResource HeroBackground}"/>
        <Grid HorizontalAlignment="Left" Height="53" VerticalAlignment="Top" Width="1264">
            <Button FontSize="12" HorizontalAlignment="Left" Margin="54,21,0,0" VerticalAlignment="Top" Width="83" Height="32" Click="Search_Doctor" Opacity="0.999">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Doctor" Height="21" Width="23" HorizontalAlignment="Left"  Foreground="White"/>
                    <materialDesign:PackIcon Kind="Plus" Height="22" Width="30" HorizontalAlignment="Left"  Foreground="White"/>
                </StackPanel>
            </Button>
            <Label x:Name="drLabel" Width ="200" FontSize="14" Height="22" Margin="0,21,140,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
            <Label Visibility="Hidden" x:Name="drId" Width ="200" FontSize="14" Height="22" Margin="0,21,50,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
            <Button Visibility="Visible" Content="Clear" HorizontalAlignment="Right" Margin="0,19,50,0" VerticalAlignment="Top" Width="75" FontSize="13" Background="#FF960000" Height="24" Click="Clear_Click" BorderBrush="{x:Null}"/>

        </Grid>
        <Grid Margin="0,53,-2,385">
            <Label Content="Naredni termin:" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Top" Width="1164" FontSize="20" Height="32" Margin="50,6,52,0"/>
            <ContentControl 
                    tz:Transitionz.Opacity="{tz:OpacityParams Duration=100, From=0, TransitionOn=Loaded, To=1}"
                    tz:Transitionz.Blur="{tz:BlurParams Duration=240, From=20, TransitionOn=Loaded, To=0}"
                    x:Name="nextAppointment" HorizontalAlignment="Center" Height="109" Margin="50,43,48,0"  VerticalAlignment="Top" Width="1168" ContentTemplate="{StaticResource appointmentTemplate}" Content="{Binding nextAppointment}"/>

        </Grid>
        <TabControl Background="White" HorizontalAlignment="Center" Height="405" Margin="42,209,52,0" VerticalAlignment="Top" Width="1172">
            <TabItem  Style="{StaticResource TabItem}" Header="Week">
                <appointmentTabs:AppointmentsWeek/>
            </TabItem>
            <TabItem  Style="{StaticResource TabItem}" Header="Day">
                <appointmentTabs:AppointmentsDay/>
            </TabItem>
            <TabItem  Style="{StaticResource TabItem}" Header="List">
                <appointmentTabs:AppointmentsList/>
            </TabItem>
        </TabControl>
        <Button Content="Feedback" HorizontalAlignment="Right" Margin="0,0,48,10" VerticalAlignment="Bottom" Width="86" Height="20" Click="Feedback_Click" FontSize="11"/>
        <Button Content="Demo" HorizontalAlignment="Right" Margin="0,0,151,10" VerticalAlignment="Bottom" Width="86" Height="21" Click="Feedback_Click" FontSize="11"/>
    </Grid>
</UserControl>
