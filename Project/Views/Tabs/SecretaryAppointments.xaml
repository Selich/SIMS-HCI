<UserControl x:Class="Project.Views.Tabs.SecretaryAppointments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:tz="http://schemas.abtsoftware.co.uk/transitionz"
             xmlns:appointmentTabs="clr-namespace:Project.Views.Tabs.AppointmentTabs">

    <Grid>
        <Rectangle HorizontalAlignment="Left"
                   Height="300"
                   VerticalAlignment="Top"
                   Width="1266"
                   Margin="0,-20,0,0"
                   Fill="{StaticResource HeroBackground}" />
        <Grid HorizontalAlignment="Left"
              Height="53"
              VerticalAlignment="Top"
              Width="1264">
            <Button FontSize="12"
                    HorizontalAlignment="Left"
                    Margin="54,21,0,0"
                    VerticalAlignment="Top"
                    Width="83"
                    Height="32"
                    Click="Search_Doctor"
                    Opacity="0.999">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Doctor"
                                             Height="21"
                                             Width="23"
                                             HorizontalAlignment="Left"
                                             Foreground="White" />
                    <materialDesign:PackIcon Kind="Search"
                                             Height="22"
                                             Width="30"
                                             HorizontalAlignment="Left"
                                             Foreground="White" />
                </StackPanel>
            </Button>
            <Label Visibility="Hidden"
                   x:Name="drId"
                   Width="200"
                   FontSize="14"
                   Height="22"
                   Margin="0,21,50,0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top" />
            <Button 
                    HorizontalAlignment="Left"
                    Margin="828,21,0,0"
                    VerticalAlignment="Top"
                    Width="176"
                    Click="Button_Click" >
            <StackPanel Orientation="Horizontal">
                    <TextBlock>Kreiraj Termin</TextBlock>
                <materialDesign:PackIcon Kind="Plus"
                                         Height="22"
                                         Width="30"
                                         HorizontalAlignment="Left"
                                         Foreground="White" />
            </StackPanel>
            </Button>
            <Label Content=""
                   x:Name="CurrentDoctor"
                   HorizontalAlignment="Left"
                   Margin="154,25,0,0"
                   VerticalAlignment="Top"
                   Width="111"
                   FontSize="15" />
            <Button HorizontalAlignment="Left"
                    Margin="1031,21,0,0"
                    x:Name="GenerateReportButton"
                    VerticalAlignment="Top"
                    Width="176"
                    Click="GenerateReportButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock><Run Text="Generisi Izvestaj" /></TextBlock>
                    <materialDesign:PackIcon Kind="FileDocument"
                                             Height="22"
                                             Width="30"
                                             HorizontalAlignment="Left"
                                             Foreground="White" />
                </StackPanel>
            </Button>

        </Grid>
        <Grid Margin="0,53,-2,385">
            <Label Content="Naredni termin:"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Width="1164"
                   FontSize="20"
                   Height="32"
                   Margin="51,6,53,0" />
            <ContentControl 
                tz:Transitionz.Opacity="{tz:OpacityParams Duration=100, From=0, TransitionOn=Loaded, To=1}"
                tz:Transitionz.Blur="{tz:BlurParams Duration=240, From=20, TransitionOn=Loaded, To=0}"
                            x:Name="nextAppointment"
                            HorizontalAlignment="Center"
                            Height="109"
                            Margin="0,58,10,0"
                            VerticalAlignment="Top"
                            Width="1258"
                            ContentTemplate="{StaticResource appointmentTemplate}"
                            Content="{Binding nextAppointment}" />

        </Grid>
        <TabControl Background="#FFD6D6D6"
                    HorizontalAlignment="Center"
                    Height="387"
                    Margin="42,218,52,0"
                    VerticalAlignment="Top"
                    Width="1172">
            <TabItem  Style="{StaticResource TabItem}"
                      Header="Week">
                <appointmentTabs:AppointmentsWeek Margin="0,-1,0,0"
                                                  Height="Auto" />
            </TabItem>
            <TabItem  Style="{StaticResource TabItem}"
                      Header="List">
                <appointmentTabs:AppointmentsList Background="Black" />
            </TabItem>
        </TabControl>
        <DockPanel Margin="987,610,59,10">
            <Button Content="Feedback"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Width="100"
                    Height="22"
                    Click="Feedback_Click"
                    FontSize="11" />
            <Button Content="Demo"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Width="100"
                    Height="22"
                    Click="Feedback_Click"
                    FontSize="11" />
        </DockPanel>
    </Grid>
</UserControl>
