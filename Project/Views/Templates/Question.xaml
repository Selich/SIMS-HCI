<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Project.Views.Templates">
    
        <DataTemplate x:Key="questionsTemplate">
            <StackPanel Margin="3">
                <DockPanel>
                    <TextBlock Text="{Binding QuestionText}" Foreground="Black" FontWeight="Bold" />
                    <TextBlock Text="{Binding CreationDate}" HorizontalAlignment="Right" TextAlignment="Right"/>
                </DockPanel>
            </StackPanel>
        </DataTemplate>
</ResourceDictionary>