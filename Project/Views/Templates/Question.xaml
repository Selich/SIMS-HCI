<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Project.Views.Templates">

    <DataTemplate x:Key="questionsTemplate">
        <StackPanel Margin="3"
                    Background="{x:Null}">
            <DockPanel>
                <TextBlock Text="{Binding QuestionText}"
                           Foreground="Black"
                           FontWeight="Bold" />
                <TextBlock Text="{Binding CreationDate}"
                           HorizontalAlignment="Right"
                           TextAlignment="Right"
                           FontSize="8"
                           Foreground="#FF8B8B8B" />
            </DockPanel>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>