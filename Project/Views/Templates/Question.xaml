<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Project.Views.Templates">

    <DataTemplate x:Key="questionsTemplate">
        <Grid Margin="3"
                    Background="{x:Null}">
            <DockPanel >
                <TextBlock Text="{Binding QuestionText}"
                           FontSize="9"
                           FontWeight="Bold" />
                <TextBlock Text="{Binding CreationDate}"
                           HorizontalAlignment="Right"
                           TextAlignment="Right"
                           FontSize="7"
                           Foreground="#FF8B8B8B" 
                           Margin="240,10,0,0"
                           />
            </DockPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>