<Window x:Class="Project.Views.Secretary.DoctorSearchModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project.Views.Secretary"
        mc:Ignorable="d"
        Title="DoctorSearchModal" Height="432" Width="850">
    <Grid Background="#FFE5E5E5" Margin="20,20,20,10">
        <Grid HorizontalAlignment="Left" Height="43" Margin="10,32,0,0" VerticalAlignment="Top" Width="782">
            <TextBox Name="patientFilter" HorizontalAlignment="Left" Height="23" Margin="10,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="183" TextChanged="txtFilter_TextChanged"/>
        </Grid>
        <Label Content="Rezultati Pretrage:" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="138"/>
        <ListView Name="listPatients" BorderThickness="2" Background="DarkGray" HorizontalAlignment="Left" Height="250" Margin="10,111,0,0" VerticalAlignment="Top" Width="782">
            <ListView.View>
                <GridView >
                    <GridViewColumn Header="First Name" Width="120" DisplayMemberBinding="{Binding firstName}" />
                    <GridViewColumn Header="Last Name" Width="120" DisplayMemberBinding="{Binding lastName}" />
                    <GridViewColumn Header="Jmbg" Width="120" DisplayMemberBinding="{Binding jmbg}" />

                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="Select_Doctor" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <Button Content="Feedback" HorizontalAlignment="Left" Margin="1104,603,0,0" VerticalAlignment="Top" Width="100" Height="22"/>
    </Grid>
</Window>
