<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project.Views.Secretary"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Project.Views.Secretary.ProfileModal"
        mc:Ignorable="d"
        Title="ProfileModal" Height="432" Width="850">
    <TabControl HorizontalAlignment="Left" Height="405" Margin="2,-1,0,-3" VerticalAlignment="Top" Width="838">
        <TabItem Header="Profil">
                <Grid Margin="0,-20,-4,0">
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFCDF3EE" Offset="1"/>
                            <GradientStop Color="White" Offset="0.7"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Button Content="Feedback" HorizontalAlignment="Left" Margin="1114,603,0,0" VerticalAlignment="Top" Width="100" Height="22"/>
                <Grid HorizontalAlignment="Left" Height="44" VerticalAlignment="Top" Width="1243" Margin="0,37,0,0"/>
                    <Grid HorizontalAlignment="Left" Height="320" Margin="66,38,0,0" VerticalAlignment="Top" Width="260">
                        <Image HorizontalAlignment="Left" Height="204" Margin="27,27,0,0" VerticalAlignment="Top" Width="205" Source="../../Resources/Images/Faces/face5"/>
                        <Button Content="Izmeni sliku" HorizontalAlignment="Left" Margin="27,265,0,0" VerticalAlignment="Top" Width="205"/>
                    </Grid>
                    <Grid HorizontalAlignment="Left" Height="301" Margin="436,48,0,0" VerticalAlignment="Top" Width="245">
                        <Label Content="{Binding SelectedPatient.firstName}" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Margin="15,15,0,0" VerticalAlignment="Top" Width="87"/>
                        <Label Content="Label" HorizontalAlignment="Left" Margin="15,50,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                        <Label Content="Label" HorizontalAlignment="Left" Margin="15,80,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                        <Label Content="Label" HorizontalAlignment="Left" Margin="15,110,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                        <Label Content="Label" HorizontalAlignment="Left" Margin="15,140,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                        <Label Content="Label" HorizontalAlignment="Left" Margin="15,169,0,0" VerticalAlignment="Top"/>
                        <Label Content="Label" HorizontalAlignment="Left" Margin="15,200,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                        <Button Content="Izmeni" FontSize="11" HorizontalAlignment="Left" Margin="10,270,0,0" VerticalAlignment="Top" Width="65" Height="23"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="80,50,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="80,80,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="80,110,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="80,140,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="80,170,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="80,200,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                    </Grid>
                    </Grid>
        </TabItem>
        <TabItem Header="Termini">
            <Grid Background="#FFE5E5E5">
                <ListBox HorizontalAlignment="Left" Height="278" Margin="24,68,0,0" VerticalAlignment="Top" Width="772"/>
            </Grid>
        </TabItem>
        <TabItem Header="Istorija">
            <Grid Background="#FFE5E5E5">
                <ListBox HorizontalAlignment="Left" Height="278" Margin="24,68,0,0" VerticalAlignment="Top" Width="772"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
