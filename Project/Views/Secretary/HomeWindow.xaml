<Window xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"  x:Class="Project.Views.Secretary.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project.Views.Secretary"
        FontFamily="Arial"
        mc:Ignorable="d"
        Title="HomeWindow" Height="723" Width="1280">
    <Window.Resources>


        <!--Term-->
        <DataTemplate x:Key="termTemplate">
            <Grid  Background="White" Height="25" Width="341" >
                <TextBlock FontSize="14" Text="{Binding beginning, StringFormat=hh:mm}" VerticalAlignment="Center" Margin="30,0,0,0"/>
                <TextBlock FontSize="14" Text="-" VerticalAlignment="Center" Margin="70,0,0,0"/>
                <TextBlock FontSize="14" Text="{Binding end, StringFormat=hh:mm}" VerticalAlignment="Center" Margin="80,0,0,0"/>
                <CheckBox Background="White" HorizontalContentAlignment="Center" VerticalAlignment="Center" />
            </Grid>
        </DataTemplate>

        <!--Room-->
        <DataTemplate x:Key="roomTemplate">
            <Grid  Background="White" Height="25" Width="341" >
                <TextBlock FontSize="14" Text="{Binding id}" VerticalAlignment="Center" Margin="30,0,0,0"/>
                <TextBlock FontSize="14" Text="{Binding ward}" VerticalAlignment="Center" Margin="80,0,0,0"/>
                <CheckBox Background="White" HorizontalContentAlignment="Center" VerticalAlignment="Center" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="DataTemplate_Level2">
            <Button Content="{Binding}" Height="40" Width="50" Margin="4,4,4,4"/>
        </DataTemplate>

        <DataTemplate x:Key="DataTemplate_Level1">
            <ItemsControl ItemsSource="{Binding}" ItemTemplate="{DynamicResource DataTemplate_Level2}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel  Height="390" Margin="0,2,0,-2" VerticalAlignment="Top" Width="1166" Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </DataTemplate>


        <!--Patient-->
        <DataTemplate x:Key="patientTemplate">
            <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth4" Height="85" Width="510">
                <Grid>
                    <Image Source="../../Resources/Images/Faces/face1" HorizontalAlignment="Left" Height="65" Margin="26,11,0,0" VerticalAlignment="Top" Width="66" Stretch="Fill"/>
                    <TextBlock FontWeight="Bold" FontSize="16" HorizontalAlignment="Left" Margin="120,15,0,0" TextWrapping="Wrap"  VerticalAlignment="Top">
                                    <Run Text="{Binding firstName}"/>
                                    <Run Text="{Binding lastName}"/>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="120,38,0,0" TextWrapping="Wrap"  VerticalAlignment="Top">
                                    <Run Text="{Binding address.number}"/>
                                    <Run Text="{Binding address.street}"/>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="120,50,0,0" TextWrapping="Wrap" Text="{Binding telephoneNumber}" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="120,62,0,0" TextWrapping="Wrap" Text="{Binding email}" VerticalAlignment="Top"/>
                </Grid>
            </materialDesign:Card>
        </DataTemplate>
        <!--Details-->
        <DataTemplate x:Key="patientDetailsTemplate">
            <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth4" Height="85" Width="1068">
                <Grid>
                    <Image Source="../../Resources/Images/Faces/face1" HorizontalAlignment="Left" Height="65" Margin="26,11,0,0" VerticalAlignment="Top" Width="66" Stretch="Fill"/>
                    <TextBlock FontWeight="Bold" FontSize="16" HorizontalAlignment="Left" Margin="120,15,0,0" TextWrapping="Wrap"  VerticalAlignment="Top">
                                    <Run Text="{Binding firstName}"/>
                                    <Run Text="{Binding lastName}"/>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="120,38,0,0" TextWrapping="Wrap"  VerticalAlignment="Top">
                                    <Run Text="{Binding Address.number}"/>
                                    <Run Text="{Binding Address.street}"/>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="120,50,0,0" TextWrapping="Wrap" Text="{Binding telephoneNumber}" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="120,62,0,0" TextWrapping="Wrap" Text="{Binding email}" VerticalAlignment="Top"/>
                    <Button Content="Profil" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="100" Height="65" Click="Profile_Click" />
                </Grid>
            </materialDesign:Card>
        </DataTemplate>
        <!--Question-->
        <DataTemplate x:Key="questionsTemplate">
            <StackPanel Margin="3">
                <DockPanel>
                    <TextBlock FontWeight="Bold" Text="Pitanje:" DockPanel.Dock="Left" Margin="5,0,10,0" />
                    <TextBlock Text="" />
                    <TextBlock Text="{Binding question}" Foreground="Green" FontWeight="Bold" />
                </DockPanel>
                <DockPanel>
                    <TextBlock FontWeight="Bold" Text="Odgovor:" Foreground="DarkOrange" DockPanel.Dock="Left" Margin="5,0,5,0" />
                    <TextBlock Text="{Binding answer}" />
                </DockPanel>
            </StackPanel>
        </DataTemplate>
        <!-- Appointment -->
        <DataTemplate x:Key="appointmentTemplate">
            <Grid HorizontalAlignment="Center" Height="88" Margin="0,0,0,0" VerticalAlignment="Top" Width="1068" Background="#EFFCFA"  >
                <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth4" BorderBrush="#FF0E0E0E">
                    <Grid >
                        <Grid.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFD1D1D1" Offset="1"/>
                                <GradientStop Color="White" Offset="0.553"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                        <Image Source="../../Resources/Images/Faces/face1" HorizontalAlignment="Left" Height="65" Margin="26,11,0,0" VerticalAlignment="Top" Width="66" Stretch="Fill"/>
                        <TextBlock FontWeight="Bold" FontSize="16" HorizontalAlignment="Left" Margin="120,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
                            <Run Text="{Binding Patient.firstName}"/>
                            <Run Text="{Binding Patient.lastName}"/>
                        </TextBlock>

                        <TextBlock HorizontalAlignment="Left" Margin="120,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
                            <Run Text="{Binding Patient.address.number}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding Patient.address.street}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding Patient.address.city}"/>
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left" Margin="120,50,0,0" TextWrapping="Wrap" Text="{Binding Patient.telephoneNumber}" VerticalAlignment="Top"/>
                        <TextBlock HorizontalAlignment="Left" Margin="120,62,0,0" TextWrapping="Wrap" Text="{Binding Patient.email}" VerticalAlignment="Top"/>

                        <TextBlock HorizontalAlignment="Left" Margin="120,56,0,0" TextWrapping="Wrap" Text="{Binding telephoneNumber}" VerticalAlignment="Top"/>
                        <TextBlock HorizontalAlignment="Left" Margin="120,46,0,0" TextWrapping="Wrap" Text="{Binding email}" VerticalAlignment="Top"/>
                        <TextBlock HorizontalAlignment="Left" Margin="870,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
                        <Run Text="{Binding beginning, StringFormat=hh:mm}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding beginning, StringFormat=hh:mm}"/>
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left" Margin="894,45,0,0" TextWrapping="Wrap" Text="Sala 101" VerticalAlignment="Top"/>
                        <Button Content="Termin" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="100" Height="65" Click="Term_Click" />

                    </Grid>

                </materialDesign:Card>
            </Grid >
        </DataTemplate>
    </Window.Resources>
