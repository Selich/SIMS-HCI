                                    <materialDesign:PackIcon Kind="ArrowRight"/>
                                </Button>
                            </Grid>
                            <ListBox Name="listAppointments" HorizontalAlignment="Center" Height="359" Margin="44,34,0,0" VerticalAlignment="Center" Width="1122" Background="#AEEBE4" ItemTemplate="{StaticResource appointmentTemplate}" SelectedItem="appointmentList_KeyDown"/>

